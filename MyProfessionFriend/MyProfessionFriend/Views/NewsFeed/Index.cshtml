@using EntityLayer.Concrete
@model List<Media>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_NewsfeedLayout.cshtml";
}
@foreach (var item in Model)
{

    <div class="post-content">
        <img src="@item.MediaSelf" alt="post-image" class="img-responsive post-image" />
