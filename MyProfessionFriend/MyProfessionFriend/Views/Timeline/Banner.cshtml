@model EntityLayer.Concrete.People


<div class="timeline-cover">
    <img src="@Html.DisplayFor(x=>x.TimelineImage)" alt="" class="img-responsive timeline-nav-bar" />
    <!--Timeline Menu for Large Screens-->
    <div class="timeline-nav-bar hidden-sm hidden-xs">
        <div class="row">
            <div class="col-md-3">
                <div class="profile-info">
                    <img src="@Html.DisplayFor(x=>x.PeopleImage)" alt="" class="img-responsive profile-photo" />
                    <h3>@Html.DisplayFor(x => x.PeopleName)</h3>
                    <p class="text-muted">Creative Director</p>
                </div>
            </div>
            <div class="col-md-9">
                <ul class="list-inline profile-menu">
                    <li><a href="/Timeline/Index">Timeline</a></li>
                    <li><a href="/Timeline/PeopleAbout">About</a></li>
                    <li><a href="/Timeline/PeopleAlbum">Album</a></li>
                    <li><a href="/Timeline/PeopleFriends">Friends</a></li>
                </ul>
                <ul class="follow-me list-inline">
                    <li>1,299 people following her</li>
                    <li><button class="btn-primary">Add Friend</button></li>
                </ul>
            </div>
        </div>
    </div><!--Timeline Menu for Large Screens End-->
    <!--Timeline Menu for Small Screens-->
    <div class="navbar-mobile hidden-lg hidden-md">
        <div class="profile-info">
            <img src="@Html.DisplayFor(x=>x.PeopleImage)" alt="" class="img-responsive profile-photo" />
            <h4>@Html.DisplayFor(x => x.PeopleName)</h4>
            <p class="text-muted">Creative Director</p>
        </div>
        <div class="mobile-menu">
            <ul class="dropdown-menu login">
                <li><a href="/Timeline/Index">Timeline</a></li>
                <li><a href="/Timeline/PeopleAbout">About</a></li>
                <li><a href="/Timeline/PeopleAlbum">Album</a></li>
                <li><a href="/Timeline/PeopleFriends">Friends</a></li>
            </ul>

            <button class="btn-primary">Add Friend</button>
        </div>
    </div><!--Timeline Menu for Small Screens End-->

</div>
