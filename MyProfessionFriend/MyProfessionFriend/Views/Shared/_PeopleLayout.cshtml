
@{
    Layout = null;
}




<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>My Professional Friend</title>
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="~/Admin/plugins/fontawesome-free/css/all.min.css">
    <!-- IonIcons -->
    <link rel="stylesheet" href="http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Admin/dist/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<!--
BODY TAG OPTIONS:
=================
Apply one or more of the following classes to to the body tag
to get the desired effect
|---------------------------------------------------------|
|LAYOUT OPTIONS | sidebar-collapse                        |
|               | sidebar-mini                            |
|---------------------------------------------------------|
-->
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="index3.html" class="brand-link">
                <img src="~/Admin/dist/img/AdminLTELogo.png" alt="My Professional Friend" class="brand-image img-circle elevation-3"
                     style="opacity: .8">
                <span class="brand-text font-weight-light">Profilim</span>
            </a>
            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="~/Admin/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a href="#" class="d-block">Kullanıcı Paneli</a>
                    </div>
                </div>
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <!-- Add icons to the links using the .nav-icon class
                        with font-awesome or any other icon font library -->
                        <li class="nav-item has-treeview">
                            <a href="/PeopleMedia/AllMedia/" class="nav-link">
                                <i class="nav-icon fas fa-list-alt"></i>
                                <p>
                                    Tüm Paylaşımlar

                                </p>
                            </a>

                        </li>
                        <li class="nav-item has-treeview">
                            <a href="/PeopleMedia/MyMedia/" class="nav-link">
                                <i class="nav-icon fas fa-chart-pie"></i>
                                <p>
                                    Paylaşımlarım

                                </p>
                            </a>

                        </li>
                        <li class="nav-item has-treeview menu-open">
                            <a href="/PeoplePanel/MyProfile/" class="nav-link">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>
                                    Profilim
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/PeopleMessage/Inbox/" class="nav-link">
                                <i class="nav-icon fas fa-th"></i>
                                <p>
                                    Mesajlarım
                                </p>
                            </a>
                        </li>
                        <li class="nav-item has-treeview menu-open">
                            <a href="/PeopleActivity/MyActivities/" class="nav-link">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>
                                    Etkinliklerim
                                </p>
                            </a>
                        </li>


                        <li class="nav-item has-treeview">
                            <a href="/PeopleGroup/MyGroup/" class="nav-link">
                                <i class="nav-icon fas fa-copy"></i>
                                <p>
                                    Gruplarım
                                </p>
                            </a>
                        </li>



                        <li class="nav-item has-treeview">
                            <a href="/PeopleFriend/MyFriend/" class="nav-link">
                                <i class="nav-icon fas fa-tree"></i>
                                <p>
                                    Arkadaşlarım
                                </p>
                            </a>
                        </li>

                        @if (User.IsInRole("B"))
                        {
                            <li class="nav-item has-treeview">
                                <a href="/Tag/Index/" class="nav-link">
                                    <i class="nav-icon fas fa-book"></i>
                                    <p>
                                        Etiketler
                                    </p>
                                </a>

                            </li>

                            <li class="nav-item has-treeview">
                                <a href="/ErrorPage/Page404/" class="nav-link">
                                    <i class="nav-icon fas fa-book"></i>
                                    <p>
                                        Hata Sayfaları
                                    </p>
                                </a>

                            </li>
                        }
                        <li class="nav-item has-treeview">
                            <a href="/Default/Index/" class="nav-link">
                                <i class="nav-icon fas fa-book"></i>
                                <p>
                                    Siteye Git
                                </p>
                            </a>

                        </li>
                        <li class="nav-item has-treeview">
                            <a href="/Login/Logout/" class="nav-link">
                                <i class="nav-icon fas fa-apple-alt"></i>
                                <p>
                                    Çıkış yap
                                </p>
                            </a>

                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Main content -->
            <div class="content">
                @RenderBody()
                <!-- /.container-fluid -->
            </div>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
    </div>
    <!-- ./wrapper -->
    <!-- REQUIRED SCRIPTS -->
    <!-- jQuery -->
    <script src="~/Admin/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap -->
    <script src="~/Admin/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE -->
    <script src="~/Admin/dist/js/adminlte.js"></script>
    <!-- OPTIONAL SCRIPTS -->
    <script src="~/Admin/plugins/chart.js/Chart.min.js"></script>
    <script src="~/Admin/dist/js/demo.js"></script>
    <script src="~/Admin/dist/js/pages/dashboard3.js"></script>
</body>
</html>


























