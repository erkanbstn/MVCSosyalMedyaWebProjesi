@using EntityLayer.Concrete
@model List<SchoolPart>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{  string color = "";}

<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Bölüm İşlemleri</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                #
                            </th>
                            <th style="width: 20%">
                                Bölüm Adı
                            </th>
                            <th style="width: 30%">
                                Okul Adı
                            </th>
                            <th style="width: 30%">
                                Durum
                            </th>
                            <th style="width: 20%">
                                Üye Sayısı
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            //if(item.School.SchoolName == " a okulu")
                            //{
                            //    color = "badge badge-warning";
                            //}
                            //if(item.School.SchoolName == " b okulu")
                            //{
                            //    color = "badge badge-success";
                            //}
                            <tr>
                                <td>
                                    @item.ScpartID
                                </td>
                                <td>
                                    <a>
                                        @item.ScpartName
                                    </a>
                                    <br />
                                    <small>
                                        Üyeler
                                    </small>
                                </td>
                                <td>
                                    <ul class="list-inline">
                                        <li class="list-inline-item">
                                            <img alt="Avatar" class="table-avatar" src="~/Admin/dist/img/avatar.png">
                                        </li>
                                    </ul>
                                </td>
                                <td>
                                    @item.ScpartStatus
                                </td>
                                <td class="project-state">
                                    <span class="badge badge-success">@item.School.SchoolName</span>
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-primary btn-sm" href="/People/PeopleBySchoolPart/@item.ScpartID">
                                        <i class="fas fa-folder">
                                        </i>
                                        Üyeler
                                    </a>
                                    <a class="btn btn-info btn-sm" href="/SchoolPart/EditSchoolPart/@item.ScpartID">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Düzenle
                                    </a>
                                    <a class="btn btn-danger btn-sm" href="/SchoolPart/DeleteSchoolPart/@item.ScpartID">
                                        <i class="fas fa-trash">
                                        </i>
                                        Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
</body>
</html>

<a href="SchoolPart/AddSchoolPart/" class="btn btn-primary"> Yeni Bölüm Girişi</a>

